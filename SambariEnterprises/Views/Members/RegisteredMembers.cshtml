@model IEnumerable<SambariEnterprises.ViewModels.MemberViewModel>

@{
    ViewBag.Title = "Registered Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Registered Members</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registered Members</h5>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">
                        <input type="hidden" id="UpdateSuccess" value="@ViewBag.UpdateSuccess" />
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>Password</th>
                                    <th>GST Number</th>
                                    <th>Drug Licence number</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CustomerName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Username)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Password)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GstRegistrationNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DrugLicenceNumber)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                                <a href="#" onclick="Confirmation(@item.ID);" >Delete</a>                                                
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6">No records Found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        if ($("#UpdateSuccess").val() == "updatesuccess") {
            alert("Details successfully updated.");
            $("#UpdateSuccess").val("");
        }
    });

    function Confirmation(id)
    {
        if(confirm("Are you sure you want to delete this record?"))
        {
            window.location.href = "/Members/Delete/" + id
        }
    }
</script>
